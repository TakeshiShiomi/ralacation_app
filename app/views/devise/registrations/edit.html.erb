<div class="row mt-5">
  <div class="col-6 offset-3">
    <h2 class="text-center mb-4"> アカウント編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
 
      <div class="form-group mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group mb-4">
        <i>現在のパスワード</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg" %>
      </div>
      <div class="form-group mb-4">
        <i>変更後パスワード（変更する場合のみ入力）</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
      <div class="form-group mb-4">
        <i>パスワード確認用（変更する場合のみ入力）</i><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
      </div>
    
    
      <div class="actions">
        <%= f.submit "更新" , class: "btn btn-lg btn-primary btn-block mb-3" %>
      </div>
    <% end %>
    
    <h3>アカウントの削除</h3>
    
    <p>アカウントを削除しますか? <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-sm btn-danger btn-block mb-3" %></p>
    
    <%= link_to "マイページへ戻る", "/users/#{current_user.id}" %>
  </div>
</div>
    