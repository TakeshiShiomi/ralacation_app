<div class="row mt-5">
  <div class="col-6 offset-3">
    <h3 class="text-center mb-4">ユーザー編集</h3>
     
    <%= form_with model: @user do |f| %>
      <div class="form-group mb-4">
        <%= f.label :name ,"名前" %><br />
        <%= f.text_field :name, class: "form-control form-control-lg" %>
      </div>
      <div class="form-group mb-4">
        <%= f.label :image ,"アイコン" %><br />
        <%= f.file_field :image, class: "form-control form-control-lg" %>
      </div>
      <div>
      <div class="actions">
        <%= f.submit "更新" , class: "btn btn-lg btn-primary btn-block mb-3" %>
      </div>
    <% end %>
    <%= link_to "マイページへ戻る", "/users/#{current_user.id}" %>
  </div>
</div>
